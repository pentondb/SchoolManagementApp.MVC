@model SchoolManagementApp.MVC.Data.Class

@{
    ViewData["Title"] = "Details";
}

<h1>Class Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning"
        asp-action="Edit"
        asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-dark"
        asp-action="Index">Back to List</a>
</div>
